# ===========================================
# Clio Invoice App - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/clio_invoice?schema=public"

# ===========================================
# CLIO OAUTH CONFIGURATION
# ===========================================
CLIO_CLIENT_ID=your_clio_client_id_here
CLIO_CLIENT_SECRET=your_clio_client_secret_here
CLIO_REDIRECT_URL=http://localhost:3000/api/auth/clio/callback

# Clio API Base URL (US region)
CLIO_API_URL=https://app.clio.com

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# EMAIL SERVICE (SMTP)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
SMTP_FROM=billing@example.com
SMTP_FROM_NAME="Gette Law Invoicing"

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Gette Law Invoicing"

# ===========================================
# POLLING CONFIGURATION
# ===========================================
# Default polling interval in minutes
DEFAULT_POLLING_INTERVAL_MINUTES=15

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Token expiry for approval links (in hours)
APPROVAL_TOKEN_EXPIRY_HOURS=72
