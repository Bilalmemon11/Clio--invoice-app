# ===========================================
# Clio Invoice App - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/clio_invoice?schema=public"

# ===========================================
# CLIO OAUTH CONFIGURATION
# ===========================================
# Get these from your Clio Developer App settings
# https://app.clio.com/settings/developer_applications

CLIO_CLIENT_ID={{CLIO_CLIENT_ID}}
CLIO_CLIENT_SECRET={{CLIO_CLIENT_SECRET}}
CLIO_REDIRECT_URL=http://localhost:3000/api/auth/clio/callback

# Clio API Base URL (US region)
CLIO_API_URL=https://app.clio.com

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET={{NEXTAUTH_SECRET}}
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# EMAIL SERVICE (SendGrid)
# ===========================================
SENDGRID_API_KEY={{SENDGRID_API_KEY}}
EMAIL_FROM=invoices@gettelaw.com
EMAIL_FROM_NAME="Gette Law PLLC"

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Gette Law Invoice System"

# ===========================================
# POLLING CONFIGURATION
# ===========================================
# Default polling interval in minutes
DEFAULT_POLLING_INTERVAL_MINUTES=15

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Secret for signing approval link tokens
# Generate: openssl rand -base64 32
JWT_SECRET={{JWT_SECRET}}

# Token expiry for approval links (in hours)
APPROVAL_TOKEN_EXPIRY_HOURS=72
